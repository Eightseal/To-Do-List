{
  "file_types": {
    "HTML-Jinja": ["html", "jinja"]
  },
  "terminal": {
    "detect_venv": {
      "on": {
        "directories": [".venv", "venv"],
        "activate_script": "power_shell"
      }
    }
  },
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "autosave": "on_focus_change",
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          // Ruff server settings goes here
          "lineLength": 100,
          "lint": {
            "extendSelect": ["I"]
          }
        }
      }
    }
  }
}
